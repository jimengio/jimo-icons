{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "types": [],
    "baseUrl": "./src/"
  },
  "include": ["src/*.ts", "src/*.tsx", "src/*/*.ts"],
  "exclude": ["lib/*"]
}
